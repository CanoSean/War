                                            p1hand.splice(x - 1, 1);
                                            pwar.push(p2play);
                                            p2hand.splice(y - 1, 1);
                                        for(var i = 0; i < 3; i++){
                                            pwar.push(p1hand[x++]);
                                            p2hand.splice(y - 1, 1);
                                            pwar.push(p2hand[y++])
                                            p1hand.splice(x - 1, 1); 
                                        }
                                        console.log(pwar)
