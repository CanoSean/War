                                            for (var i = 0; i < pwar.length; i++) {
                                                p1hand.push(pwar[i]);
                                            }
                                            pwar = [];
                                        }
                                        p2hand.splice(y - 1, 1);
                                        //p2play--;
                                        y--;
                                        $('#pwin').html("Win!")
                                        $('#awin').html("Lose!")
                                         $('#holder').remove();
                                        console.log("Player Added")
                                        pwar = [];
                                    } else if (p1play.value < p2play.value) {
                                        p2hand.push(p1hand[x - 1]);
                                        if (pwar.length > 1) { 
                                            for(var i = 0; i < pwar.length; i++){
                                                p2hand.push(pwar[i]);
                                            }
                                            pwar = [];
                                        }
